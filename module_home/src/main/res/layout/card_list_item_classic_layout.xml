<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_classic_img"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/iv_item_classic_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BBBBBB"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_item_classic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_item_classic_img"
        android:layout_marginTop="6dp"
        android:textColor="#333333"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_classic_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_item_classic_img"
        android:layout_marginTop="7dp"
        android:drawableEnd="@mipmap/home_icon_arrow_next"
        android:drawablePadding="7dp"
        android:text="立即体验"
        android:textColor="#5D46B8"
        android:textSize="10sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>