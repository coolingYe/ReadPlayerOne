<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_activities_skills"
        android:layout_width="167dp"
        android:layout_height="122dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="6dp">

        <androidx.cardview.widget.CardView
            android:layout_width="157dp"
            android:layout_height="87dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="3dp">
            <ImageView
                android:id="@+id/iv_activities_skills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@null"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_activities_skills_level"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_gravity="top|left"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:text="简单"
            android:background="#FFC524"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_activities_skills_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_activities_skills_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30秒"
                android:textColor="#999"
                android:textSize="8sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>