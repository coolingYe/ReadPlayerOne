<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_c12_ffffff">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_lucky_meta"
        android:layout_width="165dp"
        android:layout_height="102dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/iv_lucky_meta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_lucky_meta_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_lucky_meta_enter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/card_lucky_meta"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/tv_lucky_meta_enter"
        android:layout_width="91dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lucky_meta_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/card_lucky_meta"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_c14_e32a1e"
        android:text="立即参与"
        android:textSize="12sp"
        android:textColor="#FFF"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>