<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:paddingStart="@dimen/src_dp_26"
    android:paddingEnd="@dimen/src_dp_26"
    android:paddingTop="@dimen/src_dp_13"
    android:paddingBottom="@dimen/src_dp_13"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_top_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="@dimen/src_font_16"
        android:layout_marginTop="@dimen/src_dp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_person_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/src_dp_23"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_top_number"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="27.5dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            tools:background="@mipmap/ic_user_head" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/src_dp_13"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="@dimen/src_font_14"
        android:layout_marginTop="@dimen/src_dp_2"
        app:layout_constraintStart_toEndOf="@+id/card_person_avatar"
        app:layout_constraintTop_toTopOf="@+id/card_person_avatar"
        tools:text="用户名称" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="#999999"
        android:textSize="@dimen/src_font_8"
        android:layout_marginTop="@dimen/src_dp_3"
        app:layout_constraintStart_toStartOf="@+id/tv_person_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_name"
        tools:text="企业名称" />

    <TextView
        android:id="@+id/tv_power_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="#6B55D8"
        android:textSize="@dimen/src_font_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="500" />



</androidx.constraintlayout.widget.ConstraintLayout>