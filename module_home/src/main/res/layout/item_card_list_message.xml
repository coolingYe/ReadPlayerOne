<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/src_dp_18"
    android:paddingEnd="@dimen/src_dp_18">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/src_dp_13"
        android:paddingBottom="@dimen/src_dp_13">

        <TextView
            android:id="@+id/tv_top_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/src_dp_3"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/tv_information_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/src_dp_6"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_new_message"
            app:layout_constraintStart_toEndOf="@+id/tv_top_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="捷报！佳都科技预中标2.38亿佳都科技预中标" />

        <ImageView
            android:id="@+id/iv_new_message"
            android:layout_width="29dp"
            android:layout_height="14dp"
            android:layout_marginEnd="3dp"
            android:src="@mipmap/home_message_new_icon"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_information_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_information_title"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6B55D8" />
</LinearLayout>