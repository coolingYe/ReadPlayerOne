<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card_sports_meeting"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/iv_sports_meeting_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_sports_meeting_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="17dp"
            android:textColor="#FFF"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/tv_sports_meeting_app_enter"
            android:layout_width="112dp"
            android:layout_height="46dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:background="@mipmap/home_img_activities_enter_bg"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>