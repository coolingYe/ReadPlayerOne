<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="309dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_owner_notice_date"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12sp"
        android:textColor="#666"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_owner_notice"
        android:layout_width="343dp"
        android:layout_height="273dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_owner_notice_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/iv_owner_notice"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingStart="14dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/tv_owner_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/tv_owner_notice_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="极乐世界的法律加快速度螺丝钉解放喀什酱豆腐立刻就可是到了快结束了扩大解放了看记录卡撒旦"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textColor="#666"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>