<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.EnergyStationActivity">
    
    <com.zeewain.base.widgets.CustomActionBar
        android:id="@+id/cab_energy_station"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        app:layout_constraintTop_toTopOf="parent"
        app:title="能量站"/>

    <ImageView
        android:id="@+id/img_energy_station_logo"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:src="@mipmap/home_img_energy_logo"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/cab_energy_station"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_energy_station_logo"
        android:background="@drawable/shape_top_c16_ffffff"
        android:layout_marginTop="-16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="23dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="        在这里您可以打造活力四射的氛围，跨部门进行交流，比拼激发乐趣，展现企业的组织力与凝聚力，唤醒企业的热情与活力。"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:paddingStart="29dp"
                android:background="@mipmap/home_img_energy_morning"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_energy_morning_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_energy_morning_summary"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="早上 姿势打卡"/>

                <TextView
                    android:id="@+id/tv_energy_morning_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_energy_morning_title"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:text="今天也要为自己加油"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:paddingStart="29dp"
                android:background="@mipmap/home_img_energy_noon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_energy_noon_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_energy_noon_summary"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="午休 幸运砸金蛋"/>

                <TextView
                    android:id="@+id/tv_energy_noon_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_energy_noon_title"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:text="砸开一天好运气"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:paddingStart="29dp"
                android:background="@mipmap/home_img_energy_off_work"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_energy_off_work_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_energy_off_work_summary"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="下班 幸运射击"/>

                <TextView
                    android:id="@+id/tv_energy_off_work_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_energy_off_work_title"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:text="击中每日好心情"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:paddingStart="29dp"
                android:background="@mipmap/home_img_energy_home"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_energy_home_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_energy_home_summary"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="回家 疯狂拆红包"/>

                <TextView
                    android:id="@+id/tv_energy_home_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_energy_home_title"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:text="拆出今天好福气"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>