<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/src_dp_16">

    <EditText
        android:id="@+id/tv_search_box"
        android:layout_width="227dp"
        android:layout_height="32dp"
        android:background="@drawable/shape_f4f4f4"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/src_dp_40"
        android:textColor="#999999"
        android:textSize="14sp"
        tools:hint="@string/search_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/src_dp_8"
        android:src="@mipmap/home_icon_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_search_button"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:background="@drawable/shape_c21_6f59da"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/search"
        android:layout_marginStart="@dimen/src_dp_8"
        app:layout_constraintStart_toEndOf="@+id/tv_search_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>