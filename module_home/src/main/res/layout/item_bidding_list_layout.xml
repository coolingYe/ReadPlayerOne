<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bidding_list"
        android:layout_width="100dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/iv_bidding_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="4dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@+id/iv_bidding_list"/>

    <TextView
        android:id="@+id/iv_bidding_list_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="10sp"
        android:textColor="#666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bidding_list"/>

    <TextView
        android:id="@+id/iv_bidding_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textSize="10sp"
        android:textColor="#666"
        app:layout_constraintRight_toLeftOf="@+id/iv_bidding_list"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bidding_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>