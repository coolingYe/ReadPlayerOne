<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/shape_c6_ffffff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="111dp">



        <ImageView
            android:id="@+id/iv_act_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="157dp"
            android:layout_height="87dp"/>



        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="15dp"
            android:textColor="#333333"
            android:id="@+id/tv_act_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="第一届社团文化运动会"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/iv_act_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_act_image"
            app:layout_constraintWidth_default="wrap" />



        <TextView
            android:id="@+id/tv_act_join_number"
            android:drawablePadding="5dp"
            android:layout_marginTop="7dp"
            android:drawableLeft="@mipmap/icon_join_person"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_act_title"
            app:layout_constraintLeft_toRightOf="@+id/iv_act_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234人参与"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/tv_act_time"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-07-21"
            android:textColor="#ff666666"
            android:textSize="10sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    


</FrameLayout>