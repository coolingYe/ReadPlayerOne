<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_draw">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp">


        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp" />


        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tv_user_name"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="27dp"
            android:text="用户ID"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_draw_autograph"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="58dp"
            android:text="每天都有新的收获"
            android:textSize="13sp" />





    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/rl_draw_community"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>



    <LinearLayout
        android:id="@+id/ll_draw_create_comm"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_marginLeft="29dp"
            android:background="@mipmap/icon_draw_comm"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:text="创建社团"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_draw_add_comm"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_marginLeft="29dp"
            android:background="@mipmap/icon_draw_add"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:text="加入其他社团"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_draw_help"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:layout_marginLeft="29dp"
            android:background="@mipmap/icon_draw_help"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="66dp"
            android:layout_height="22dp"
            android:text="帮助"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

    </LinearLayout>





</LinearLayout>