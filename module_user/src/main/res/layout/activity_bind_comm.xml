    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_marginLeft="27dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ide_phone"
                android:textColor="#999999"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号" />


            <TextView
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_ide_phone"
                android:textColor="@color/colorRed"
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <EditText
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:background="@null" />

        <View
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">




        <EditText
            android:maxLength="6"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:id="@+id/et_cap"
            android:hint="验证码"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:background="@null" />


        <TextView
            android:textColor="#5E47B9"
            android:background="@drawable/selector_capter"
            android:layout_centerVertical="true"
            android:id="@+id/tv_cap"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:enabled="true"
            android:gravity="center"
            android:text="获取验证码" />


        <View
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>



    <Button
        android:id="@+id/btn_next"
        android:text="下一步"
        style="@style/BigButtonThemeStyle" />




