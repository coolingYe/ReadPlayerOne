<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />


    <RelativeLayout

        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/rl_ide_id"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_ide_id"
                android:textColor="@color/colorHint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="社团ID" />


            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_ide_id"
                android:textColor="@color/colorRed"
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <EditText
            android:maxLength="8"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="27dp"
            android:textSize="16sp"
            android:id="@+id/et_sel_com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:background="@null" />


        <View
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <TextView
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:hint="社团名称"
            android:gravity="center_vertical"
            android:id="@+id/tv_com_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp" />

        <View
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <TextView
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:id="@+id/tv_sel_ide"
            android:gravity="center_vertical"
            android:hint="身份"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:background="@null" />


        <View
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="73dp"
            android:background="@color/colorLine"
            android:layout_width="2dp"
            android:layout_height="15dp" />


        <ImageView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:id="@+id/iv_sel_ide"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:src="@mipmap/icon_angle" />

        <View
            android:layout_marginRight="27dp"
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <!-- 社团员工类型  -->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_ide_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">





            <RelativeLayout
                android:id="@+id/rl_name_id"
                android:layout_marginLeft="27dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/tv_name_id"
                    android:textColor="@color/colorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="员工姓名" />


                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_name_id"
                    android:textColor="@color/colorRed"
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>




            <EditText
                android:textColor="@color/colorBlack"
                android:layout_marginRight="27dp"
                android:textSize="16sp"
                android:id="@+id/et_perf_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:background="@null" />


            <View
                android:layout_marginRight="27dp"
                android:layout_marginLeft="27dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

    </LinearLayout>

    <!-- 企业类型 -->
