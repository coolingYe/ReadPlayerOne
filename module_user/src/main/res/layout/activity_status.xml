<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zeewain.base.widgets.CustomActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_sta_ok"
        android:id="@+id/iv_statue"
        android:layout_width="100dp"
        android:layout_height="100dp"/>



    <TextView
        android:id="@+id/tv_statue"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="审核中，请等待\n审核通过会发通知给你哦"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        />

      <Button
          android:id="@+id/btn_know"
          android:layout_marginTop="47dp"
          style="@style/BigButtonThemeStyle"
          android:text="我知道了"/>


</LinearLayout>