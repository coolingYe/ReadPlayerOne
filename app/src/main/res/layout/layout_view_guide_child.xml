<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_guide_background"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="312dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_guide_illustration_3"
        android:contentDescription="image"/>

    <TextView
        android:id="@+id/tv_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/src_dp_10"
        android:textColor="#8080F8"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/src_font_18"
        app:layout_constraintTop_toBottomOf="@+id/iv_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="文化" />

    <TextView
        android:id="@+id/tv_guide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/src_dp_10"
        android:textColor="#8080F8"
        android:textSize="@dimen/src_font_13"
        app:layout_constraintTop_toBottomOf="@+id/tv_guide_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="社团元宇宙 弘扬社团精神" />

    <TextView
        android:id="@+id/tv_guide_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/src_dp_16"
        android:background="@drawable/ic_text_background"
        android:gravity="center"
        android:text="跳过"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/src_font_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_start_text"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_marginTop="39dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_guide_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#30FFFFFF"
        app:strokeColor="#8080F8"
        app:strokeWidth="1dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/src_dp_10"
            android:text="立即体验"
            android:textColor="#8080F8"
            android:textSize="@dimen/src_font_13" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>